<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:layout_root"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:alignment="vertical_center"
    ohos:background_element="#fff"
    ohos:min_height="40vp"
    ohos:orientation="horizontal">

    <Text
        ohos:id="$+id:text_elapsedTime"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:left_padding="4vp"
        ohos:min_width="30vp"
        ohos:right_padding="6vp"
        ohos:text_color="#000"
        ohos:text_size="38"/>

    <Image
        ohos:id="$+id:image_icon"
        ohos:height="24vp"
        ohos:width="24vp"
        ohos:layout_alignment="center"
        ohos:scale_mode="inside"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="0fp"
        ohos:bottom_margin="8vp"
        ohos:orientation="vertical"
        ohos:top_margin="8vp"
        ohos:weight="2">

        <Text
            ohos:id="$+id:text_line1"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:left_padding="6vp"
            ohos:multiple_lines="true"
            ohos:right_padding="2vp"
            ohos:text="event"
            ohos:text_color="#000"
            ohos:text_size="32"/>

        <Text
            ohos:id="$+id:text_line2"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:left_padding="6vp"
            ohos:multiple_lines="true"
            ohos:right_padding="2vp"
            ohos:text_color="#000"
            ohos:text_size="32"/>
    </DirectionalLayout>
</DirectionalLayout>

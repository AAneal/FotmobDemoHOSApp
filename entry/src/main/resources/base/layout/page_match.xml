<?xml version="1.0" encoding="utf-8"?>
<StackLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#fff">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:layout_alignment="center"
        ohos:orientation="vertical">

        <DirectionalLayout
            ohos:id="$+id:layout_matchHeader"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:alignment="center"
            ohos:min_height="40vp"
            ohos:orientation="horizontal">

            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="0fp"
                ohos:bottom_margin="8vp"
                ohos:orientation="vertical"
                ohos:top_margin="8vp"
                ohos:weight="2">

                <Text
                    ohos:id="$+id:text_homeTeam"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:left_padding="6vp"
                    ohos:right_padding="2vp"
                    ohos:text_color="#000"
                    ohos:auto_scrolling_count="2"
                    ohos:truncation_mode="auto_scrolling"
                    ohos:text_size="38"/>

                <Text
                    ohos:id="$+id:text_awayTeam"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:left_padding="6vp"
                    ohos:right_padding="2vp"
                    ohos:text_color="#000"
                    ohos:auto_scrolling_count="2"
                    ohos:truncation_mode="auto_scrolling"
                    ohos:text_size="38"/>
            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="0fp"
                ohos:alignment="horizontal_center"
                ohos:bottom_margin="8vp"
                ohos:orientation="vertical"
                ohos:top_margin="8vp"
                ohos:weight="1">

                <Text
                    ohos:id="$+id:text_scoreOrTime"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:left_padding="2vp"
                    ohos:right_padding="6vp"
                    ohos:text_color="#000"
                    ohos:text_size="40"/>

                <Text
                    ohos:id="$+id:text_elapsedTime"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:left_padding="2vp"
                    ohos:right_padding="6vp"
                    ohos:text_color="#000"
                    ohos:text_size="40"/>

            </DirectionalLayout>
        </DirectionalLayout>

        <Text
            ohos:id="$+id:text_status"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:layout_alignment="center"
            ohos:left_padding="12vp"
            ohos:max_text_lines="4"
            ohos:multiple_lines="true"
            ohos:right_padding="12vp"
            ohos:text="Connecting to phone..."
            ohos:text_alignment="horizontal_center"
            ohos:text_color="#fff"
            ohos:text_size="32"
            />

        <Button
            ohos:id="$+id:button_retry"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:background_button"
            ohos:bottom_padding="8vp"
            ohos:layout_alignment="center"
            ohos:left_padding="16vp"
            ohos:right_padding="16vp"
            ohos:text="Refresh"
            ohos:text_alignment="center"
            ohos:text_color="#fff"
            ohos:text_size="42"
            ohos:top_margin="16vp"
            ohos:top_padding="8vp"
            ohos:visibility="hide"/>
    </DirectionalLayout>

</StackLayout>
